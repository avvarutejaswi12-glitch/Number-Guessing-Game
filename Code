Code:
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int number, guess, attempts = 0, diff;

    srand(time(0));
    number = rand() % 100 + 1;

    printf("Welcome to the Number Guessing Game!\n");

    do {
        printf("Enter your guess (1-100): ");
        scanf("%d", &guess);
        attempts++;

        diff = guess - number;
        if (diff < 0) diff = -diff;   // absolute difference

        if (guess == number) {
            printf("Correct! You guessed it in %d attempts.\n", attempts);
        }
        else if (guess > number) {
            if (diff < 10)
                printf("High! You're close.\n");
            else
                printf("Too High!\n");
        }
        else {  // guess < number
            if (diff < 10)
                printf("Low! You're close.\n");
            else
                printf("Too Low!\n");
        }

    } while (guess != number);

    return 0;
}
